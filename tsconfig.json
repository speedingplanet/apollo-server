{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,
		"noEmit": true,
    "esModuleInterop": true,
		"strictNullChecks": true,
    "types": ["node", "mocha"],
  },
	"include": ["src", "./*.ts"]
}